#:kivy 2.0
#:include telas/widgets_config.kv
<Label>:
    font_name: 'telas/fontes/lastica.ttf'
    font_size: '20sp'

<Cadastro>:
    ScrollView:
        BoxLayout:
            padding: 0
            spacing: 0
            BoxLayout:
                padding: 0
                spacing: 0
                size_hint_x: 1
                Image:
                    height: self.texture_size[1] - dp(20)
                    source: 'telas/imagens/loginTopo.png'
                    allow_stretch: True
                    keep_ratio: False
            BoxLayout:
                padding: (0, 50, 0, 50)
                spacing: 50
                Label:
                    text: "Cadastro COXITER \nAdentre nessa delicia!"
                    halign: 'center'
                    color: 0 , 0 , 0 , 1
                    markup: True
                BoxLayout:
                    orientation: 'vertical'
                    padding: 20
                    spacing: 10
                    Label:
                        text: "Insira seu [color=3662f6]nome[/color]:"
                        color: 0 , 0 , 0 , 1
                        markup: True
                    GridLayout:
                        cols: 3
                        Label:
                            size_hint_x: 0.05
                        TextInput:
                        Label:
                            size_hint_x: 0.05
                        
                    Label:
                        text: "Insira seu [color=3662f6]usuario[/color]:"
                        color: 0 , 0 , 0 , 1
                        markup: True
                    GridLayout:
                        cols: 3
                        Label:
                            size_hint_x: 0.05
                        TextInput:
                        Label:
                            size_hint_x: 0.05
                        
                    Label:
                        text: "Insira sua [color=3662f6]senha[/color]:"
                        color: 0 , 0 , 0 , 1
                        markup: True
                    GridLayout:
                        cols: 3
                        Label:
                            size_hint_x: 0.05
                        TextInput:
                        Label:
                            size_hint_x: 0.05
                        
                    Label:
                        text: "[color=3662f6]Repita[/color] sua [color=3662f6]senha[/color]:"
                        color: 0 , 0 , 0 , 1
                        markup: True
                    GridLayout:
                        cols: 3
                        Label:
                            size_hint_x: 0.05
                        TextInput:
                        Label:
                            size_hint_x: 0.05
                        
                    GridLayout:
                        cols: 2
                        spacing: 10
                        Button:
                            text: "Voltar"
                            size_hint_x: 0.6
                            background_color: "#B2C5ED"
                            background_normal: ""
                            color: .2, .2, .2,1
                            on_press:
                                root.manager.current = "login"
                                root.manager.transition.direction = 'right'
                        Button:
                            text: "Cadastrar"
                            size_hint_x: 1
                            background_color: "#A3C0FF"
                            background_normal: ""
                            color: .2, .2, .2,1
                            on_press:
                                root.manager.current = "login"
                                root.manager.transition.direction = 'right'
                BoxLayout:
                    padding: 0
                    spacing: 0
                    Image:
                        height: self.texture_size[1] - dp(20)
                        source: 'telas/imagens/loginBaixo.png'
                        size: self.texture_size
                        allow_stretch: True
                        keep_ratio: False