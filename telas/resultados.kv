#:kivy 2.0
#:include telas/widgets_confi.kv
<Label>:
    font_name: 'telas/fontes/NewsCycle.ttf'
    font_size: '20sp'
    color: 0,0,0,1

<Resultados>:
    canvas.before:
        Color:
            rgba: .80, .91, 1, 1
        Rectangle:  
            pos: self.pos
            size: self.size

    ScrollViewMenu:
        size_hint_x: .85
        size_hint_y: .70
        pos_hint: {'center_x': .50, 'center_y': .50}

        canvas.before:
            Color:
                rgba: .80, .91, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 1
            RoundedRectangle:  
                pos: self.pos
                size: self.size
                radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
        BoxLayout:
            size_hint_x: 1
            size_hint_y: None
            orientation: 'vertical'
            Label:
                text: "Sem resultados por enquanto"
                font_size: '18sp'
                size_hint: 1, None
                color: 0 , 0 , 0 , 1