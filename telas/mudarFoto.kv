#:include telas/widgets_config.kv

################################################################################
# Tela para escola de foto
################################################################################

<MudarFoto>:
    setMensagem: setMensagem
    escolha_arquivo: escolha_arquivo
    canvas.before:
        Color:
            rgba: .98, .98, .98, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: 1

        FileChooserIconView:
            id: escolha_arquivo
            size_hint_y: 9
        
        Label:
            id: setMensagem
            size_hint_y: 0.5
            color: 0,0,0,1
            font_name: "telas/fontes/NewsCycle.ttf"

        GridLayout:
            size_hint_y: 1
            cols: 2
            padding: 0
            spacing: 20

            Botao:
                size_hint_y: 1
                text: 'OK'
                on_press: root.carregar_foto(escolha_arquivo.path, escolha_arquivo.selection)

            Botao:
                size_hint_y: 1
                text: "Cancelar"
                on_press:
                    root.manager.current = 'config'
                    root.manager.transition.direction = 'right'