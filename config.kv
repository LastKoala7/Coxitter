#:kivy 2.0
<label>:
    font_name: 'lastica.ttf'
    font_size: '15sp'

<config>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: .95, .95, .95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "[size=25]Configuracoes de Conta:[/size]"
            size_hint: 1, 0.3
            markup: True
            color: 0 , 0 , 0 , 1
            halign: "left"
            veling: "center"
            text_size: root.width, None
            padding_x: 20

            #padding_y: 40
        Button:
            text: "Editar Foto de Perfil"
            size_hint: 1, 0.15
            background_color: "#C4E3FAFF"

        Button:
            text: "Editar Informacoes de Conta"
            size_hint: 1, 0.15
            background_color: "#C4E3FAFF"
        Button:
            text: "Editar Bio"
            size_hint: 1, 0.15
            background_color: "#C4E3FAFF"

        Label:
            size_hint: 1,0.5


