#:kivy 2.0
<label>:
    font_name: 'lastica.ttf'
    font_size: '20sp'

<editfoto>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: .95, .95, .95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: 20
        spacing: 10
        Label:
            text: "Alterar [color=3662f6]foto de perfil[/color]:"
            size_hint: 1, 0.4
            color: 0 , 0 , 0 , 1
            markup: True
        Button:
            text: "Escolher uma foto"
            size_hint: 0.4, 0.06
            background_color: "#C4E3FAFF"
            font_size: '17sp'
            position: root.center_x
        Button:
            text: "Confirmar"
            size_hint: 0.5, 0.1
            background_color: "#C4E3FAFF"
           
